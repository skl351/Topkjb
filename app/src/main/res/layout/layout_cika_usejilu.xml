<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout

    android:background="@drawable/back_15cir_white"
    android:layout_marginBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout

        android:padding="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/icon_cika_small1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7432548391"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.top.kjb.customview.roundimage
            android:id="@+id/id_head_img"
            app:round="10dp"
            android:src="@color/color_333333"
            android:layout_width="104dp"
            android:layout_height="79dp"
            />
        <LinearLayout
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/title_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP健身公馆—保集府店"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_5c5c5c"
                    android:textSize="@dimen/title_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-03-12 09:23"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:text="去评价"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:background="@drawable/back_90cir_kuang_1cbe6f"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</RelativeLayout>
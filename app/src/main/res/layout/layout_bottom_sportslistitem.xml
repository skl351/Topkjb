<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="66dp">
            <TextView
                android:gravity="center"
                android:id="@+id/id_number_text"
                android:textColor="@color/color_9B9BAE"
                android:textSize="@dimen/title_size_18"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text=""/>
            <com.top.kjb.customview.roundimage
                android:id="@+id/id_gym_pic"
                app:round="90dp"
                android:layout_marginLeft="20dp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/id_gym_name"
                    android:textSize="@dimen/title_size_16"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <TextView
                    android:singleLine="true"
                    android:id="@+id/id_gym_address"
                    android:textSize="@dimen/title_size_14"
                    android:textColor="@color/color_9B9BAE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
            
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back_90cir_eaeaea"/>
        </LinearLayout>
</RelativeLayout>
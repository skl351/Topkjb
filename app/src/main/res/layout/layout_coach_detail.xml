<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.top.kjb.customview.Imagebanner2
                    android:id="@+id/id_banner"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@color/white"
                    app:autoPlayDuration="5000"
                    app:indicatorPosition="centerBottom"
                    app:indicatorMargin="30dp"
                    app:indicatorShape="oval"
                    app:indicatorSpace="6dp"
                    app:isAutoPlay="true"
                    app:selectedIndicatorColor="@color/white"
                    app:selectedIndicatorHeight="6dp"
                    app:selectedIndicatorWidth="6dp"
                    app:unSelectedIndicatorColor="@color/gray"
                    app:unSelectedIndicatorHeight="6dp"
                    app:unSelectedIndicatorWidth="6dp" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="-20dp"
                android:background="@drawable/back_top_15cir_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/id_teacher_name"
                                android:textStyle="bold"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/title_size_20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""/>
                            <TextView
                                android:id="@+id/id_congye_year"
                                android:layout_marginLeft="9dp"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:textColor="@color/white"
                                android:background="@drawable/back_2cir_ffba75_to_ffa837"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/title_size_12"
                                android:text=""/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="bottom"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textColor="@color/color_484848"
                                android:textSize="@dimen/title_size_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="累计授课："/>
                            <TextView
                                android:id="@+id/id_num_kec"
                                android:textColor="@color/color_484848"
                                android:textSize="@dimen/title_size_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""/>
                           <LinearLayout
                               android:layout_marginLeft="30dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:id="@+id/id_text1"
                                   android:textColor="@color/color_484848"
                                   android:textSize="@dimen/title_size_12"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text=""/>
                           </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/id_click_like"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/id_like_love"
                            android:src="@mipmap/icon_love_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/id_like_text"
                            android:textColor="@color/color_a4a4a4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="夸一下"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_f9f9f9"/>
                <LinearLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/color_484848"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教练简介"/>
                    <TextView
                        android:id="@+id/id_coach_text"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/color_484848"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_f9f9f9"/>
                <LinearLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/color_484848"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="资质证书"/>
                 <com.top.kjb.customview.roundimage
                     android:id="@+id/id_coach_image"
                     android:layout_marginTop="15dp"
                     android:src="@mipmap/ic_launcher"
                     android:layout_width="180dp"
                     android:layout_height="100dp"
                     app:round="@dimen/title_size_10"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/id_click_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/icon_other_fanhui" />
</RelativeLayout>
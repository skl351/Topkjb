<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:id="@+id/id_big_view_click"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.top.kjb.customview.RoundImageView
            android:id="@+id/id_head_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/id_name_text"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_alignRight="@id/id_head_image"
           android:layout_alignLeft="@id/id_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_head_image"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/title_size_13" />
    </RelativeLayout>
</LinearLayout>
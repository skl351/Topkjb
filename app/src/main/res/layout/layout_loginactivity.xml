<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.top.kjb.customview.Topnavigationbar
        android:id="@+id/id_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/id_click_yzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_click_yzm_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="验证码登录"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/id_yzm_line"
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_click_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_click_password_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密码登录"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/id_password_line"
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/black"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/id_phone_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入11位手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textSize="@dimen/title_size_16" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/color_f4f4f4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_yzm_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/id_yzm_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入6位验证码"
                        android:maxLength="6"
                        android:textSize="@dimen/title_size_16" />

                    <TextView
                        android:id="@+id/id_click_send_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yzm_button"
                        android:enabled="false"
                        android:paddingLeft="15dp"
                        android:paddingTop="9.5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="9.5dp"
                        android:text="发送验证码"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/title_size_14" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_f4f4f4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="标志文本"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/title_size_12"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_password_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:textSize="@dimen/title_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_90cir_f4f4f4"
                        android:paddingLeft="15dp"
                        android:paddingTop="9.5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="9.5dp"
                        android:text="发送验证码"
                        android:textSize="@dimen/title_size_14"
                        android:visibility="invisible" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_f4f4f4" />

                <TextView

                    android:id="@+id/id_click_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="忘记密码"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/title_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/id_click_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/yzm_button"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/string_login"
                android:textColor="@color/gray"
                android:textSize="@dimen/title_size_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="其他登录方式"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/title_size_12" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@mipmap/icon_weix" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
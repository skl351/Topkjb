<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/id_big_view"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        >

       <RelativeLayout
           android:elevation="1dp"
           android:id="@+id/id_big_view_nei"
           android:padding="10dp"
           android:layout_centerInParent="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <TextView
               android:id="@+id/id_type_text"
               android:textColor="@color/white"
               android:layout_centerInParent="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="健身"/>
       </RelativeLayout>
        <com.top.kjb.customview.roundimage
            android:id="@+id/id_big_background"
            android:layout_alignLeft="@id/id_big_view_nei"
            android:layout_alignRight="@id/id_big_view_nei"
            android:layout_alignTop="@id/id_big_view_nei"
            android:layout_alignBottom="@id/id_big_view_nei"
            app:round="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
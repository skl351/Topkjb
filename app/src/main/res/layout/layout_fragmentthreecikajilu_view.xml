<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_3E4148"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/topTab"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/id_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_left_white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="次卡使用记录"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size_18" />


    </RelativeLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.top.kjb.customview.RoundImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="42dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="@dimen/title_size_15"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大冷泡子哔哩哔哩"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="@dimen/title_size_13"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大冷泡子哔哩哔哩"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/color_394159"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/back_90cir_eec49f_to_ebac79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买次卡"/>
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/back_top_15cir_f2f2f2"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
</LinearLayout>
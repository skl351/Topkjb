<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_top_view_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_top_bar_2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/id_top_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <LinearLayout
                android:id="@+id/id_click_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_click_one_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/title_size_15" />

                <ImageView
                    android:id="@+id/id_id_click_one_img"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_1cbe6f" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_click_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_click_two_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="圈子"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/title_size_15" />

                <ImageView
                    android:id="@+id/id_click_two_img"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_1cbe6f"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_click_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_click_three_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约运动"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/title_size_15" />

                <ImageView
                    android:id="@+id/id_click_three_img"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_1cbe6f"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_click_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_click_four_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/title_size_15" />

                <ImageView
                    android:id="@+id/id_click_four_img"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_1cbe6f"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_top_view_big">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout

            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:srlEnableAutoLoadMore="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/id_click_publish"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/back_90cir_1cbe6f">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_picture" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/id_attion_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dongtai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你还没有关注过谁呢"
            android:textColor="@color/color_a4a4a4"
            android:textSize="@dimen/title_size_13" />
    </LinearLayout>
</RelativeLayout>